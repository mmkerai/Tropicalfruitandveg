<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tropicalfruitandveg.androidapp"
    android:versionCode="1"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tropicalfruitandveg.androidapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tropicalfruitandveg.androidapp.About"
            android:label="@string/title_about"
			android:launchMode="singleInstance"
            android:parentActivityName="com.tropicalfruitandveg.androidapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tropicalfruitandveg.androidapp.MainActivity" />
        </activity> 
        <activity
            android:name="com.tropicalfruitandveg.androidapp.Summary"
            android:label="@string/title_summary"
			android:launchMode="singleInstance"
            android:parentActivityName="com.tropicalfruitandveg.androidapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tropicalfruitandveg.androidapp.MainActivity" />
        </activity> 
        <activity
            android:name="com.tropicalfruitandveg.androidapp.ShowTfvInfo"
            android:label="@string/title_detail"
			android:launchMode="singleInstance"
            android:parentActivityName="com.tropicalfruitandveg.androidapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tropicalfruitandveg.androidapp.MainActivity" />
        </activity> 
        
        </application>

</manifest>